<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel_draft']" position="after">
                    <button name="button_print_attachment" string="Print/Attachment" type="object" groups="account.group_account_invoice"
                      attrs="{'invisible': ['|', ('url_attachment', '!=', False), ('state', '=', 'draft')]}"/>
                </xpath>
                <xpath expr="//form/sheet/group/group[1]" position="inside">
                    <field name="url_attachment" widget="url"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
