<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        
		<record id="view_rpt_budget_future_commit_summary_wizard" model="ir.ui.view">
            <field name="name">view.rpt.budget.future.commit.summary.wizard</field>
            <field name="model">rpt.budget.future.commit.summary</field>
            <field name="inherit_id" ref="pabi_budget_report.view_report_budget_common_multi_form"/>
            <field name="arch" type="xml">
            	<field name="budget_method" position="attributes">
                	<attribute name="invisible">1</attribute>
            	</field>
            	<field name="chartfield_id" position="attributes">
                	<attribute name="invisible">1</attribute>
            	</field>
                <field name="charge_type" position="attributes">
                	<attribute name="invisible">1</attribute>
            	</field>
            	<field name="section_ids" position="attributes">
                	<attribute name="invisible">1</attribute>
            	</field>
                <field name="project_ids" position="attributes">
                	<attribute name="invisible">1</attribute>
            	</field>
            	<group name="report_types" position="attributes">
                	<attribute name="attrs">{'invisible': [('async_process', '=', True),('uuid','!=',False)]}</attribute>
            	</group>
            	<group name="filter" position="attributes">
                	<attribute name="attrs">{'invisible': [('async_process', '=', True),('uuid','!=',False)]}</attribute>
            	</group>
            	<group name="report_type" position="replace">
	               	<group name="report_type" string="Report type">
	               		<div states="choose">
		               		<field name="async_process"/><label for="async_process"/>
							<field name="jasper_report" on_change="1" /><label for="jasper_report"/>
						</div>
	            	</group>
	            </group>
	            <div name="xlsx.report" position="replace">
                	<field name="state" invisible="1"/>
                	<field name="uuid" invisible="1"/>
            	</div>
                <footer name="button_report" position="replace">
                	<footer name="button_report" states="choose">
					    <button name="action_get_report" string="Execute Report" type="object" class="oe_highlight"
                				attrs="{'invisible': [('async_process', '!=', True)]}" />
		                <button name="run_jasper_report" string="View Report" type="object" default_focus="1" class="oe_highlight"
							    attrs="{'invisible': [('jasper_report', '!=', True)]}"/>
					    or
					    <button special="cancel" string="Cancel" type="object" class="oe_link"/>
					</footer>
				</footer>
            </field>
        </record>
	
  		<record id="action_menu_rpt_budget_future_commit_summary_wizard" model="ir.actions.act_window">
		    <field name="name">Budget Future Commit Summary</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">rpt.budget.future.commit.summary</field>
		    <field name="view_mode">form</field>
		    <field name="view_mode">form</field>
		    <field name="view_id" ref="view_rpt_budget_future_commit_summary_wizard" />
		    <field name="target">new</field>
		    <field name="context">{'action_type': 'my_budget_future_commit'}</field>
  		</record>
  		
  		<menuitem id="menu_rpt_budget_future_commit_summary" parent="account_budget_activity.menu_action_budget_report" sequence="120" 
  			action="action_menu_rpt_budget_future_commit_summary_wizard"/>
  			
	</data>
</openerp>